<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <Spinner
        android:id="@+id/pagesSpinner"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--quantity input-->
    <LinearLayout
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!--Title and checker for allOrSome-->
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <!--allOrSome Title-->
            <TextView
                android:text="Clients"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <!--allOrSome Checker-->
            <Switch
                android:id="@+id/allOrSomeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp" />
        </LinearLayout>

        <!--Quantity selector or all text-->
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <!--all clients selected-->
            <TextView
                android:id="@+id/all"
                android:visibility="gone"
                android:text="All"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <!--amount selector-->
            <LinearLayout
                android:gravity="center"
                android:id="@+id/some"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:onClick="lessClicked"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_left" />
                <EditText
                    android:id="@+id/amountInput"
                    android:paddingHorizontal="5dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:inputType="numberSigned"
                    android:text="1"
                    android:textSize="21sp"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:onClick="moreClicked"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--message Bubble-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="bubbleClicked"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:padding="15dp"
        android:background="@drawable/bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bubbleInput"
            android:hint="Your message here..."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!--send button-->
    <TextView
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="sendClicked"
        android:paddingVertical="10dp"
        android:text="Send"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>